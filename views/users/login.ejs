<% layout("/layouts/boilerplate.ejs")%>

<div class="row justify-content-center align-items-center min-vh-100">
  <div class="col-12 col-md-6 col-lg-4 p-4 shadow rounded bg-white">
    <div class="text-center mb-4">
      <div class="postoria-logo mb-2"><i class="fa-solid fa-compass me-2"></i>Postoria</div>
      <h2 class="fw-bold" style="font-family: 'Montserrat', sans-serif;">Login to Postoria</h2>
      <p class="text-muted">Welcome back! Please enter your details.</p>
    </div>
    <form method="post" action="/login" class="needs-validation" novalidate autocomplete="on">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
          <input type="text" id="username" name="username" placeholder="Username" class="form-control" required autofocus>
        </div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
          <input type="password" id="password" name="password" placeholder="Password" class="form-control" required>
          <span class="input-group-text show-password-toggle" id="togglePassword" style="user-select:none;"><i class="fa-solid fa-eye"></i></span>
        </div>
      </div>
      <div class="d-grid gap-2 mt-4">
        <button class="btn btn-primary btn-lg" type="submit">Login</button>
      </div>
      <div class="text-center mt-3">
        <span class="text-muted">Don't have an account?</span> <a href="/signup">Sign up</a>
      </div>
    </form>
  </div>
</div>