<% layout("/layouts/boilerplate.ejs") %>

<body>
  <div class="container-fluid px-1 px-md-5 py-3">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6">
        <div class="card show-card listing-card mb-4">
          <div class="card-body text-center">
            <h3 class="fw-bold mb-3"><%= read.title %></h3>
            <img src="<%= read.image.url %>" class="card-img-top show-image img-fluid rounded mb-3" alt="..." style="max-height:300px; object-fit:cover;">
            <p class="card-text mb-2">
              <i><%= read.description %></i>
            </p>
            <p class="mb-2">
              <b><%= read.location %>,</b>
              <b><%= read.country %></b>
            </p>
          </div>
        </div>
        <% if (currUser && currUser._id.equals(read.owner)) { %>
          <div class="d-flex justify-content-center mb-3 gap-2 flex-wrap">
            <a href="/listings/<%= read._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
            <form action="/listings/<%= read._id %>?_method=Delete" method="post" class="d-inline">
              <button class="btn btn-dark">Delete</button>
            </form>
          </div>
        <% } %>
        <div class="mb-4">
          <hr>
          <% if (currUser) { %>
            <h4 class="mb-3">Leave a Review</h4>
            <form method="post" action="/listings/<%= read._id %>/reviews" novalidate class="needs-validation">
              <div class="mb-3">
                <b><i><label for="rating" class="form-label">Rating</label></i></b>
                <fieldset class="starability-slot">
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>
              <div class="mb-3">
                <b><i><label for="comment" class="form-label">Comment</label></i></b>
                <textarea name="review[Comment]" id="comment" cols="20" rows="3" class="form-control" required></textarea>
                <div class="invalid-feedback">Please Add Some Comments</div>
              </div>
              <button class="btn btn-outline-dark">Submit</button>
            </form>
          <% } %>
        </div>
        <% if (read.reviews.length > 0) { %>
          <hr>
          <div class="row justify-content-center">
            <h5 class="mb-3">All Reviews</h5>
            <% for (let review of read.reviews) { %>
              <div class="card col-12 col-md-5 ms-md-3 mb-3">
                <div class="card-body">
                  <h5 class="card-title">@<%= review.author.username %></h5>
                  <p class="card-text starability-result" data-rating="<%= review.rating %>"></p>
                  <p class="card-text">
                    <%= review.Comment %>
                  </p>
                </div>
                <% if (currUser && currUser._id.equals(review.author._id)) { %>
                  <form class="mb-3" method="post" action="/listings/<%= read._id %>/reviews/<%= review._id %>?_method=Delete">
                    <button class="btn btn-sm btn-dark">Delete</button>
                  </form>
                <% } %>
              </div>
            <% } %>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</body>